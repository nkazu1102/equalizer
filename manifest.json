{
  "manifest_version": 3,
  "name": "Original Equalizer",
  "version": "1.0.0",
  "description": "高品質なイコライザーであらゆるウェブサイトの音質を向上させます",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["equalizer.js", "page-context.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

